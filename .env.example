# Environment variables for AI Teacher Backend
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:5500"]

# Model Configuration
OPENAI_MODEL=gpt-4o-mini
TTS_MODEL_NAME=microsoft/speecht5_tts
STT_MODEL_NAME=openai/whisper-base

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=[".pdf", ".txt", ".docx", ".md"]

# Session Configuration
MAX_SESSION_DURATION=3600  # 1 hour

# Database Configuration (if using database)
DATABASE_URL=sqlite:///./ai_teacher.db
